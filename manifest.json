{
  "manifest_version": 3,
  "name": "Gemini Context Tracker",
  "version": "1.0.0",
  "description": "Developer-focused open-source Chrome Extension to track and visualize context window usage on gemini.google.com.",
  "permissions": [
    "storage",
    "scripting",
    "declarativeNetRequest"
  ],
  "host_permissions": [
    "*://gemini.google.com/*"
  ],
  "background": {
    "service_worker": "src/background/network-interceptor.ts",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "*://gemini.google.com/*"
      ],
      "js": [
        "src/content/content-script.ts"
      ],
      "run_at": "document_idle",
      "all_frames": false
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "src/content/main-world-interceptor.ts",
        "assets/*"
      ],
      "matches": [
        "*://gemini.google.com/*"
      ]
    }
  ],
  "action": {
    "default_title": "Gemini Context Tracker"
  }
}